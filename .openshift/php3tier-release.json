{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "php3tier-release",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_RELEASE}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_RELEASE}"
                },
                "annotations": {
                    "openshift.io/generatedby": "OpenShiftWebConsole"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APP_RELEASE}"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "dev-simplephp:${APP_RELEASE}"
                            }
                        }
                    },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentconfig": "${APP_RELEASE}"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${APP_RELEASE}",
                            "deploymentconfig": "${APP_RELEASE}"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "dev-simplephp",
                                "image": "172.30.76.228:5000/devops-php3tier01/dev-simplephp:${APP_RELEASE}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "MYSQL_USER",
                                        "value": "gregh"
                                    },
                                    {
                                        "name": "MYSQL_PASSWORD",
                                        "value": "redhat"
                                    },
                                    {
                                        "name": "MYSQL_DATABASE",
                                        "value": "sampledb"
                                    }
                                ],
                                "resources": {},
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                    }
                }
            },
            "status": {}
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_RELEASE}",
                "creationTimestamp": null,
                "labels": {
                    "app": "dev-simplephp:${APP_RELEASE}"
                },
                "annotations": {
                    "openshift.io/generatedby": "OpenShiftWebConsole"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "deploymentconfig": "${APP_RELEASE}"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_RELEASE}",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_RELEASE}"
                },
                "annotations": {
                    "openshift.io/generatedby": "OpenShiftWebConsole",
                    "openshift.io/host.generated": "true"
                }
            },
            "spec": {
                "host": "${APP_RELEASE}-devops-php3tier01.cloudapps.os1.phx2.redhat.com",
                "to": {
                    "kind": "Service",
                    "name": "${APP_RELEASE}"
                }
            },
            "status": {}
        }
    ]
    "parameters": [
      {
        "name": "APP_RELEASE",
        "description": "The Build of Application to Release",
        "value": "dev-simplephp-0"
        "required": true
      }
     ]
}
