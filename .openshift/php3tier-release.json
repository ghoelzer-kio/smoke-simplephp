{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "php3tier-release",
        "creationTimestamp": null
    },
    "objects": [
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_RELEASE}-simplephp",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_RELEASE}-simplephp"
                },
                "annotations": {
                    "openshift.io/generatedby": "OpenShiftWebConsole"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate",
                    "resources": {}
                },
                "triggers": [
                  {
                    "type": "ImageChange",
                    "imageChangeParams": {
                      "automatic": true,
                      "containerNames": [
                        "${APP_RELEASE}-simplephp"
                      ],
                      "from": {
                        "kind": "ImageStreamTag",
                        "name": "dev-simplephp:${APP_RELEASE}",
                        "namespace": "devops-php3tier01"
                      },
                      "lastTriggeredImage": ""
                    }
                  },
                    {
                        "type": "ConfigChange"
                    }
                ],
                "replicas": 1,
                "selector": {
                    "deploymentconfig": "${APP_RELEASE}-simplephp"
                },
                "template": {
                    "metadata": {
                        "creationTimestamp": null,
                        "labels": {
                            "app": "${APP_RELEASE}-simplephp",
                            "deploymentconfig": "${APP_RELEASE}-simplephp"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "${APP_RELEASE}-simplephp",
                                "image": "dev-simplephp:${APP_RELEASE}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "MYSQL_USER",
                                        "value": "gregh"
                                    },
                                    {
                                        "name": "MYSQL_PASSWORD",
                                        "value": "redhat"
                                    },
                                    {
                                        "name": "MYSQL_DATABASE",
                                        "value": "sampledb"
                                    }
                                ],
                                "resources": {},
                                "terminationMessagePath": "/dev/termination-log",
                                "imagePullPolicy": "Always"
                            }
                        ],
                        "restartPolicy": "Always",
                        "dnsPolicy": "ClusterFirst"
                    }
                }
            },
            "status": {}
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APP_RELEASE}-simplephp",
                "creationTimestamp": null,
                "labels": {
                    "app": "${APP_RELEASE}-simplephp"
                },
                "annotations": {
                    "openshift.io/generatedby": "OpenShiftWebConsole"
                }
            },
            "spec": {
                "ports": [
                    {
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080,
                        "nodePort": 0
                    }
                ],
                "selector": {
                    "deploymentconfig": "${APP_RELEASE}-simplephp"
                },
                "type": "ClusterIP",
                "sessionAffinity": "None"
            },
            "status": {
                "loadBalancer": {}
            }
        }
    ],
  "parameters": [
    {
      "name": "APP_RELEASE",
      "description": "The Build of Application to Release",
      "value": "dev-simplephp-0",
      "required": true
    }
  ],
  "labels": {
    "template": "php3tier-release-template"
  }
}
